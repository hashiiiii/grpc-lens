# https://editorconfig.org/

root = true

[*]
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
max_line_length = 140
indent_style = space
indent_size = 2

[{Makefile,*.go,.gitmodules}]
indent_style = tab
indent_size = 4

[go.{mod,work,work.sum,sum}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

[{*.md,*.zig,Dockerfile}]
indent_size = 4
